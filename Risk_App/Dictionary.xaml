<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ControlTemplate TargetType="Button" x:Key="bt2Template">
        <Border Name="bbb" CornerRadius="2" BorderBrush="CadetBlue" BorderThickness="0" Background="#3A4161" Height="30" Width="170">
            <ContentControl Name="Text_bbbw" Margin="3" HorizontalAlignment="Center" Foreground="#F8EBDE" VerticalAlignment="Center" Content="{TemplateBinding Content}"/>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#C4C3D1" TargetName="bbb" />
                <Setter Property="Button.Foreground" Value="#3A4161" TargetName="Text_bbbw"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
</ResourceDictionary>