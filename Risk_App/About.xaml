<Window x:Class="Risk_App.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Risk_App"
        mc:Ignorable="d"
        Title="О программе" Width="400" Height="200" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Icon="icon1.ico" Background="#F8EBDE">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="10" Background="#F8EBDE">
        <StackPanel>
            <Label FontSize="15">Учет операционных рисков</Label>
            <Label FontSize="15">Разработчик: Жегало Юрий Александрович</Label>
            <Label FontSize="15">© 2021</Label>
            <WrapPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,15,0,0">
                <Button IsDefault="True" Click="Accept_Click" MinWidth="60" Template="{StaticResource bt2Template}" Margin="10,0,10,0">OK</Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
